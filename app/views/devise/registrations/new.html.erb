<div class="container">

  <div class="titre">
    <h1>Inscription</h1>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="form">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true ,
                      input_html: { autocomplete: "email" },
                      label: "Email"%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" },
                      label: "Mot de passe" %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      label: "Nouveau mot de passe" %>
          <%= f.input :firstname,
                      required: true,
                      autofocus: true ,
                      input_html: { autocomplete: "First Name"},
                      label: "Nom" %>
          <%= f.input :lastname,
                      required: true,
                      autofocus: true ,
                      input_html: { autocomplete: "Last Name"},
                      label: "PrÃ©nom" %>
          <%= f.file_field :image,
                      required: false,
                      autofocus: true ,
                      input_html: { autocomplete: "Upload your picture"},
                      label: "Photo de profil",
                      class: "btn-image" %>
        </div>
        <%= console %>
        <div class="form-actions">
          <%= f.button :submit, "S'inscrire", class: "btn btn-primary btn-big" %>
        </div>
      <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <%= image_tag'https://images.unsplash.com/photo-1511081692775-05d0f180a065?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=d88fea0c5c2cc353536aa990f3415772&auto=format&fit=crop&w=1866&q=80', class: "formulaire-photo", id: "photo-signup" %>
    </div>
  </div>
</div>
