<div class="container">

  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <%= image_tag'https://ritzcarlton-h.assetsadobe.com/is/image/content/dam/the-ritz-carlton/hotels/usa-and-canada/massachusetts/boston-common/dining/RCBC%20Artisan%20Bistro.png?$LargeViewport100pct$', class: "photo-restaurant" %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <%= image_tag'https://www.demangel.fr/sites/default/files/inline-images/cuisine_collective/cuisine_collective_3.jpg', class: "photo-restaurant" %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <%= image_tag'https://www.demangel.fr/sites/default/files/inline-images/cuisine_collective/cuisine_collective_11.jpg', class: "photo-restaurant" %>
    </div>
  </div>

  <div class="card-restaurant">



    <% @restaurant.images.each do |image| %>
      <%= image_tag image, alt: "alttext" %>
    <% end %>


    <h2><%= @restaurant.name %></h2>

    <p>Categorie: <strong><%= @restaurant.category %></strong></p>
      <%= @restaurant.address %>
  </div>

  <div class="card-restaurant">
    <% if user_signed_in? %>
      <p>
        <strong>Faire une reservation</strong>
        <%= simple_form_for [@restaurant, @reservation] do |f| %>

          <div class="form-inputs">
            <%= f.input :date, as: :date, html5: true %>
          </div>
          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </p>
    <% end %>
  </div>

  <%= link_to "Retour Ã  l'accueil", restaurants_path, class: "label label-primary"%>

  <% if user_signed_in? && current_user == @restaurant.user %>
    <div class="card-restaurant">
      <p>Je veux modifier la description de mon restaurant</p>
      <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "label label-primary"%>
    </div>
  <% end %>

  <% @restaurant.reviews.each do |review| %>
    <div class="card-message">
      <div class="message">
        <% if review.writter.image.attached? %>
          <%= image_tag review.writter.image, class: "avatar-bordered" %>
        <% end %>
        <div class="message-name">
          <h3>
            <%= review.writter.firstname %>
            <%= review.writter.lastname %>
          </h3>
          <p>
            <%= review.updated_at %>
          </p>
        </div>
        <div class="message-body">
          <p>
            <strong>
              <% review.stars.times do %>
                <span class="glyphicon glyphicon-star checked"></span>
              <% end %>
              <% review.blank_stars.times do %>
                <span class="glyphicon glyphicon-star-empty "></span>
              <% end %>
            </strong>
          </p>
          <p>
            <%= review.description %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
  <% if user_signed_in? && current_user.id != @restaurant.user %>
    <div class="card-message add-comment">
        <button id="review_button" class="btn btn-primary">Ajouter un commentaire</button>
    </div>
    <div id="review_section" class="card-message hidden">
      <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :description, as: :text %>
          <%= f.input :stars, collection: 1..5 %>
          <%= f.submit "Envoyer", class: "btn btn-primary" %>
       <% end %>
    </div>
  <% end %>
</div>
