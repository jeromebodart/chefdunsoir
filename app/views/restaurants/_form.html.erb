

<div class="form">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name, label: 'Commencer à choisir un nom pour votre restaurant', class: "my-button" %>

      <%= f.input :category, collection: [ "Français", "Chinois", "Thaï", "Japonaise", "Belge", "Indienne"], label: 'Choisissez maintenant un type de cuisine' %>
      <%= f.input :address, label: "Quelle est l'adresse de votre restaurant" %>
      <p>Merci d'ajouter au moins 1 image de votre restaurant que pourront voir les utilsateurs ?</p>
      <%= f.file_field :images,
                  multiple: true,
                  input_html: { autocomplete: "Upload your picture",
                  class: "form-margin",
                  } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>

</div>


